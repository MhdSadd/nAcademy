<%- include("../partials/header") %> 
<%- include("../partials/breadCrumb") %>
<%- include("../partials/messages") %> 
        <section class="package-section padding-top-120">
            <div class="container">
                <div class="row">
                    <%courses.forEach(courses => { %>
                        <div class="col-lg-4 col-md-6">
                            <div class="single-package-item">
                                <div class="package-offer blue-bg">
                                    <%if (courses.promo) {%>
                                        <span><%= courses.promo %> Off </span>
                                    <% }  else { %>

                                    <% } %>
                                </div>
                                <div class="package-content">
                                    <div class="package-icon template-icon blue-icon">
                                        <i class="icofont-library"></i>
                                    </div>
                                    <div class="package-title">
                                        <h4><%= courses.courseName %> </h4>
                                    </div>
                                    <p class="margin-top-20"><%= courses.description %> </p>
                                    <div class="package-price blue-price">
                                        <h4>&#8358;<%= courses.price %> </h4>
                                    </div>
                                </div>
                                <div class="package-image">
                                    <img src="<%= courses.courseImage %> " style="height: 275px;" alt="image">
                                    <a href="/courses/single-package/<%= courses._id %> " style="background-color: orange; width: 100%;">View course</a>

                                </div>
                            </div>
                        </div>
                    <% })%>
                
                </div>
            </div>
        </section>
<%- include("../partials/footer") %> 